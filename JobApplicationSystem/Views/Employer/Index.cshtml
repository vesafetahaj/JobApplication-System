@{
    Layout = "~/Views/Shared/_EmployerLayout.cshtml";
}

<style>
    #main {
        text-align: center;
        margin: 50px auto;
    }

    h1 {
        color: #2c3e50;
        font-size: 36px;
    }

    .dashboard-container {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .dashboard-box {
        width: 200px;
        height: 150px;
        background-color: #4d331f;
        border-radius: 10px;
        margin: 20px;
        padding: 20px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    }

        .dashboard-box h3 {
            color: #fff;
            font-size: 18px;
            margin-bottom: 10px;
        }

        .dashboard-box p {
            color: #fff;
            font-size: 36px;
            font-weight: bold;
        }
</style>

<div id="main">
    <h1>Welcome to your Job Dashboard, Employer!</h1>

    <div class="dashboard-container">
        <div class="dashboard-box">
            <h3>Total Applications</h3>
            <p>50</p>
        </div>
    </div>
</div>
