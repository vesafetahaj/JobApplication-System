@model JobApplicationSystem.DAL.Models.Employer

@{
    Layout = "~/Views/Shared/_EmployerLayout.cshtml";
}

<div id="main">
    <h1>Your Profile</h1>
    <hr />
    <div class="container pt-5 pb-5">
        <div class="main-body">
            <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="~/images/@Model.Image" class="rounded-circle" width="150" alt="Employer Logo" />
                                <div class="mt-3">
                                    <h4 class="text-capitalize">@Model.Name @Model.Surname</h4>
                                    
                                    <p class="text-muted font-size-sm">
                                        <i class="fa fa-envelope" aria-hidden="true"></i>  @Model.Email
                                    </p>
                                    <p class="text-muted font-size-sm text-capitalize">
                                        <i class="fa fa-map-marker" aria-hidden="true"></i>  @Model.Address
                                    </p>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row" style="padding-top: 15px; padding-bottom: 15px;">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Full Name</h6>
                                </div>
                                <div class="col-sm-9 text-secondary text-capitalize">
                                    @Model.Name @Model.Surname
                                </div>
                            </div>
                            <hr />
                            <div class="row" style="padding-top: 15px; padding-bottom: 15px;">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Email</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    @Model.Email
                                </div>
                            </div>
                            <hr />
                            <div class="row" style="padding-top: 15px; padding-bottom: 15px;">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Mobile</h6>
                                </div>
                                <div class="col-sm-9 text-secondary text-capitalize">
                                    @Model.Mobile
                                </div>
                            </div>
                            <hr />
                            <div class="row" style="padding-top: 15px; padding-bottom: 15px;">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Address</h6>
                                </div>
                                <div class="col-sm-9 text-secondary text-capitalize">
                                    @Model.Address
                                </div>
                            </div>
                            <hr />
                            <div class="row" style="padding-top: 20px; padding-bottom: 20px;">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Company</h6>
                                </div>
                                <div class="col-sm-9 text-secondary text-capitalize">
                                    @Model.Company
                                </div>
                            </div>
                            <hr />
                            <div class="row justify-content-end">
                                <div class="col-sm-20 text-secondary text-right">
                                    <a class="btn btn-outline-secondary" href="@Url.Action("EditPersonalInfo", "Employer")">
                                        Edit your personal info
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">