@model JobApplicationSystem.DAL.Models.Employer

@{
    Layout = "~/Views/Shared/_EmployerLayout.cshtml";
}

<div id="main">
    <h1>Employer Profile</h1>
    <div class="container pt-5 pb-5">
        <div class="main-body">
            <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <div class="d-flex flex-column align-items-center text-center">
                                <img src="~/images/@Model.Image" class="rounded-circle" width="150" alt="Employer Logo" />
                                <div class="mt-3">
                                    <h4 class="text-capitalize">@Model.Name @Model.Surname</h4>
                                    <p class="text-muted font-size-sm text-capitalize">
                                        <i class="fa-solid fa-location-dot"></i>@Model.Address
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="card mb-3">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Full Name</h6>
                                </div>
                                <div class="col-sm-9 text-secondary text-capitalize">
                                    @Model.Name @Model.Surname
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Email</h6>
                                </div>
                                <div class="col-sm-9 text-secondary text-capitalize">
                                    @Model.Email
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Mobile</h6>
                                </div>
                                <div class="col-sm-9 text-secondary text-capitalize">
                                    @Model.Mobile
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Address</h6>
                                </div>
                                <div class="col-sm-9 text-secondary text-capitalize">
                                    @Model.Address
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-sm-3">
                                    <h6 class="mb-0">Company</h6>
                                </div>
                                <div class="col-sm-9 text-secondary text-capitalize">
                                    @Model.CompanyNavigation?.Name
                                </div>
                            </div>
                            <hr />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
