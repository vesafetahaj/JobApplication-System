@{
    Layout = "~/Views/Shared/_EmployerLayout.cshtml";
}

<style>
    .job-container {
        width: 70%;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin: 0 auto;
    }

    .btn-primary {
        background-color: #5A4D46;
        border-color: #5A4D46;
    }

        .btn-primary:hover {
            background-color: #483F38;
            border-color: #483F38;
        }
</style>

<h1>Jobs I've Posted</h1>
<hr />

@if (Model != null && Model.Count > 0)
{
    <div class="job-container">
        @foreach (var job in Model)
        {
            <div class="row mb-4">
                <div class="col-md-2">
                    <img src="~/images/@job.CompanyLogo" alt="Company Logo" class="img-fluid rounded-circle" />
                </div>
                <div class="col-md-6">
                    <h5 class="card-title" style="margin-top:30px;">@job.Title</h5><br />
                    <p class="card-text small text-muted">
                        <i class="fa fa-building" aria-hidden="true"></i>  <span style="padding-right:20px;">@job.EmployerNavigation.Company</span>
                        <i class="fa fa-map-marker" aria-hidden="true"></i>  <span style="padding-right:20px;">@job.Address</span>
                        <i class="fa fa-money" aria-hidden="true"></i>  <span style="padding-right:20px;">@job.Salary</span>
                    </p>
                </div>

                <div class="col-md-4">
                    <div class="d-flex flex-column align-items-end">
                        <p class="card-text small text-muted">Last Date to Apply: @job.LastDateToApply.ToShortDateString()</p>
                        <a href="@Url.Action("Details", new { id = job.JobId })" class="btn btn-primary mt-2">More</a>
                        <a href="@Url.Action("ViewApplicants", "Employer", new { jobId = job.JobId })" class="btn btn-primary mt-2">View Applicants</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No jobs posted by you.</p>
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
