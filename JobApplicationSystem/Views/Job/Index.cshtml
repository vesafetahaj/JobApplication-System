
@{
    Layout = "~/Views/Shared/_EmployerLayout.cshtml";
}
<h1>Jobs I've Posted</h1>
<hr/>
<div class="row">
    @foreach (var job in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">@job.Title</h5>
                    <p class="card-text">@job.Description</p>
                    <p class="card-text">Company: @job.Company</p>
                    <p class="card-text">Last Date to Apply: @job.LastDateToApply.ToShortDateString()</p>
                    <p class="card-text">Salary: @job.Salary</p>
                    <a href="@Url.Action("Details", new { id = job.JobId })" class="btn btn-primary">View Details</a>
                </div>
            </div>
        </div>
    }
</div>