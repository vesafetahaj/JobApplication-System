﻿@using Microsoft.AspNetCore.Identity
@model IdentityRole

@{
    ViewData["Title"] = "Delete Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main">
    <div class="row">
        <div class="col-md-6">
            <h5>Are you sure you want to delete the role: @Model.Name?</h5>
            <hr />
            <form method="post" action="@Url.Action("DeleteConfirmed", "Roles", new { id = Model.Id })">
                <div class="row">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>