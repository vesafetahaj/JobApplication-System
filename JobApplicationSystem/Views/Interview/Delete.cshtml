@model JobApplicationSystem.DAL.Models.Interview
@{
   
    Layout = "~/Views/Shared/_EmployerLayout.cshtml";
}

<h1>Delete Interview</h1>

<div>
    <h4>Are you sure you want to delete this interview?</h4>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Time)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Time)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Location)
        </dd>

       

        <dt>
            @Html.DisplayNameFor(model => model.Feedback)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Feedback)
        </dd>


    </dl>

    @using (Html.BeginForm("DeleteConfirmed", "Interview", new { id = Model.InterviewId }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <input type="submit" value="Delete" class="btn btn-danger" />
    }
    @Html.ActionLink("Cancel", "Interview", "EmployerScheduledInterviews", new { }, new { @class = "btn btn-secondary" })
</div>
