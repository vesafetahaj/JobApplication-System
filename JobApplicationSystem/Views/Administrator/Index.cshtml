@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    #main {
        text-align: center;
        margin: 50px auto;
    }

    h1 {
        color: #2c3e50;
        font-size: 36px;
    }

    .dashboard-container {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-wrap: wrap; /* Allow multiple rows for smaller screens */
    }

    .dashboard-box {
        width: 200px;
        height: 150px;
        background-color: #8b6248;
        border-radius: 10px;
        margin: 20px;
        padding: 20px;
        box-shadow: 0px 8px 16px rgba(0, 0, 0, 0.2);
        position: relative;
    }

        .dashboard-box h3 {
            color: #fff;
            font-size: 20px;
            margin-bottom: 10px;
        }

        .dashboard-box p {
            color: #fff;
            font-size: 14px;
            font-weight: bold;
        }

        .dashboard-box a {
            color: #000; /* Set link color to black */
            text-decoration: none;
        }

    .divider-line {
        position: absolute;
        bottom: 0;
        left: 50%;
        transform: translateX(-50%);
        width: 80%;
        height: 1px;
        background-color: #000;
    }

    .dashboard-box a:hover {
        text-decoration: underline; /* Add underline on hover for all links */
    }

    .dashboard-box.clock,
    .dashboard-box.calendar {
        width: 400px; /* Adjust width for clock and calendar */
    }

        /* Add style for clock and calendar */
        .dashboard-box.clock p,
        .dashboard-box.calendar p {
            font-size: 18px; /* Adjust font size for clock and calendar text */
        }
</style>

<div id="main">
    <h1><b>Welcome to your dashboard, Admin!</b></h1>

    <div class="dashboard-container">
        <div class="dashboard-box">
            <h3>Personal Data</h3>
            <div class="divider-line"></div>
            <p>Wanna change your personal data?<br><a href="/Administrator/PersonalInfo">Click here</a></p>
        </div>

        <div class="dashboard-box">
            <h3>Feedbacks</h3>
            <p><a href="/Feedback">View your feedbacks</a></p>
        </div>

        <div class="dashboard-box">
            <h3>Roles</h3>
            <p><a href="/Roles">View and manage roles</a></p>
        </div>

        <!-- Clock Box -->
        <div class="dashboard-box clock">
            <h3>Current Time</h3>
            <div class="divider-line"></div>
            <p id="current-time"></p>
        </div>

        <!-- Calendar Box -->
        <div class="dashboard-box calendar">
            <h3>Today's Date</h3>
            <div class="divider-line"></div>
            <p id="today-date"></p>
        </div>
    </div>
</div>

<script>
    // Update the current time every second
    setInterval(() => {
        const currentTimeElement = document.getElementById("current-time");
        const now = new Date();
        const hours = now.getHours().toString().padStart(2, '0');
        const minutes = now.getMinutes().toString().padStart(2, '0');
        const seconds = now.getSeconds().toString().padStart(2, '0');
        currentTimeElement.textContent = `${hours}:${minutes}:${seconds}`;
    }, 1000);

    // Display today's date
    const todayDateElement = document.getElementById("today-date");
    const options = { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' };
    todayDateElement.textContent = new Date().toLocaleDateString('en-US', options);
</script>
